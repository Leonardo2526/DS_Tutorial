<Window x:Class="Test2_FW4._8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test2_FW4._8" xmlns:extToolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <extToolkit:BusyIndicator x:Name="busyIndicator">
        <Grid>
            <StackPanel>
                <Button HorizontalAlignment="Left" x:Name="Set" Content=" Set" Height="40" Width="100" Padding="10" Margin="10,10,0,10" Click="Set_Click"/>
                <Button HorizontalAlignment="Left" x:Name="Start" Content=" Start" Height="40" Width="100" Padding="10" Margin="10,10,0,10" Click="Start_Click"/>
                <Button HorizontalAlignment="Left" x:Name="Start_progress" Content=" Start progress" Height="40" Width="100" Padding="10" Margin="10,10,0,10" Click="Start_progress_Click"/>
                <ProgressBar x:Name="PB" Minimum="0" Height="25" ValueChanged="ProgressBar_ValueChanged"/>
            </StackPanel>

        </Grid>
    </extToolkit:BusyIndicator>
   
</Window>
